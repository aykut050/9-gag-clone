<body>
    <div class="header-mobile">
        <div class="mobile-header-left">
            <a class="hamburger-menu">
                <img src="/img/menu6.png" alt="">
            </a>
            <a href="/" target="_self">
                <img id="amblem" src="/img/9gag2.png" alt="">
            </a>
        </div>
        <div class="mobile-header-right">
            <div class="mobile-dark-mode">
                <img src="/img/moon3.png" alt="">
            </div>
            <div class="mobile-search">
                <img src="/img/search3.png" alt="">
            </div>
            {{#if displayLink}}
            <a href="/users/register" class="btn btn-success" id="header-sign-up"><i
                    class="fas fa-user-plus"></i>Register</a>
            <a href="/users/login" class="btn btn-primary" id="header-sign-in"><i
                    class="fas fa-sign-in-alt"></i>Login</a>
            {{/if}}
            {{#unless displayLink}}

            <div class="dropdown d-inline">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="/img/account.png" alt=""> </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" style="color: black;" href="/profil">Profilim</a>
                    <a class="dropdown-item" style="color: black;" href="/settings">Ayarlar</a>
                    <a class="dropdown-item" style="color: black;" href="/users/logout">Çıkış</a>
                </div>
            </div>
            {{/unless}}
        </div>

    </div>

    <div class="top-nav">
        <div class="nav-menu">
            <div id="nav-left">
                <a href="/" target="_self"><img src="/img/9gag.png" id="amblem"></img>
                    

            </div>
            <div id="nav-right">
                <a onclick="darkMode()" href="#"><img src="/img/moon.png" alt=""></a>
                {{#if displayLink}}
                <a href="/users/register" class="btn btn-success" id="header-sign-up"><i
                        class="fas fa-user-plus"></i>Register</a>
                <a href="/users/login" class="btn btn-primary" id="header-sign-in"><i
                        class="fas fa-sign-in-alt"></i>Login</a>
                {{/if}}
                {{#unless displayLink}}

                <div class="dropdown d-inline">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="/img/account.png" alt=""> </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" style="color: black;" href="/profil">Profilim</a>
                        <a class="dropdown-item" style="color: black;" href="/settings">Ayarlar</a>
                        <a class="dropdown-item" style="color: black;" href="/users/logout">Çıkış</a>
                    </div>
                </div>
                {{/unless}}
            </div>
        </div>
    </div>

    <div class="modal-dialog" role="document">
        <form action="/posts/test" method="POST" enctype="multipart/form-data" style="position: relative; top:  50px">
            <div class="modal-content">

                <div class="modal-header text-center" id="modal-header-upload">
                    <h4 class="modal-title w-100 font-weight-bold">Paylaşım Yapma</h4>

                </div>
                <div class="modal-body">

                    <div class="scaper">
                        <a href="#" id="upload-file-button" class="choose-file">
                            <div class="upload-folder-img">
                                <img src="/img/folder.png" alt="">
                            </div>
                            <div class="upload-açıklama">
                                <p>Paylaşacağınız gönderiyi seçiniz</p>
                            </div>
                            <input type="file" name="postImage" value="Dosya Seç">
                        </a>
                    </div>
                    <div class="gönderi-yaparken-yorumu">
                        <textarea name="definition" id="gönderi-yorumu" placeholder="Gönderiniz hakkında yorum kısmı"
                            style="resize: none;"></textarea>
                    </div>
                    <div class="form-group">
                        <h4>Kategori seçimi</h4>
                        <select class="form-control" name="categoryName" id="">
                            {{#each categories}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">Paylaş</button>
                </div>
            </div>
        </form>
    </div>
